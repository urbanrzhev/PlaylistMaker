<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="not_found_for_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">@style/textAppearanceMedium19sp400w</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="textAppearanceMedium22sp400w">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="textAppearanceMedium14sp500w">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textAppearanceMedium14sp400w">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textAppearanceMedium19sp400w">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="textAppearanceMedium19sp500w">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="textAppearanceRegular13sp400w">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="textAppearanceRegular11sp400w">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="textAppearanceRegular16sp400w">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>        
    </style>
    <style name="text_search_list_second">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:textColor">?attr/my_view_text_search_second_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/textAppearanceRegular11sp400w</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="my_toolbars" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="navigationIcon">@drawable/vector_back_day_night</item>
        <item name="titleTextAppearance">@style/my_toolbars_title_text_appearance</item>
    </style>
    <style name="my_toolbars_title_text_appearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="vector_back_src">
        <item name="android:src">@drawable/vector_back_day_night</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/main_layout_padding</item>
    </style>
    <style name="backgroundMainActivity">
        <item name="android:background">@color/main_background</item>
    </style>
    <style name="buttonMainActivity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/main_layout_padding</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="imageSettingActivity">
        <item name="android:layout_width">@dimen/setting_image_size</item>
        <item name="android:layout_height">@dimen/setting_image_size</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/main_layout_padding</item>
    </style>
    <style name="textSettingActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">@dimen/main_layout_padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="trackTint">@color/little_white</item>
    </style>
    <style name="frameLayoutSettingActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_setting_menu</item>
        <item name="minHeight">@dimen/min_height_setting</item>
    </style>
</resources>
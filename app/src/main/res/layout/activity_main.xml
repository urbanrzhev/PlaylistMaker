<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/backgroundMainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/main_layout_padding">

    <TextView
        style="@style/titleText"
        android:layout_width="match_parent"
        android:text="@string/app_name"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_search"
        style="@style/buttonMainActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/main_layout_padding"
        android:layout_weight="1"
        android:text="@string/search"
        app:icon="@drawable/search" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_media_library"
        style="@style/buttonMainActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/main_layout_padding"
        android:layout_weight="1"
        android:text="@string/media_library"
        app:icon="@drawable/mediateka" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_settings"
        style="@style/buttonMainActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        android:text="@string/settings"
        app:icon="@drawable/settings" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:minHeight="@dimen/title_min_height"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/settings_back"
            style="@style/vector_back_src"
            android:contentDescription="@string/default_image" />

        <TextView
            style="@style/titleText"
            android:layout_gravity="center_vertical"
            android:text="@string/settings" />
    </LinearLayout>

    <FrameLayout style="@style/frameLayoutSettingActivity">

        <Switch
            android:layout_width="@dimen/switch_size"
            android:layout_height="@dimen/switch_size"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/main_layout_padding"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


        <TextView
            style="@style/textSettingActivity"
            android:text="@string/night_theme" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/buttonLayoutShareTheApp"
        style="@style/frameLayoutSettingActivity">

        <TextView
            android:id="@+id/buttonTextShareTheApp"
            style="@style/textSettingActivity"
            android:text="@string/share" />

        <ImageView
            style="@style/imageSettingActivity"
            android:contentDescription="@string/default_image"
            android:src="@drawable/share" />
    </FrameLayout>

    <FrameLayout style="@style/frameLayoutSettingActivity">

        <TextView
            android:id="@+id/buttonTextWriteToSupport"
            style="@style/textSettingActivity"
            android:text="@string/support" />

        <ImageView
            style="@style/imageSettingActivity"
            android:contentDescription="@string/default_image"
            android:src="@drawable/support" />
    </FrameLayout>

    <FrameLayout style="@style/frameLayoutSettingActivity">

        <TextView
            android:id="@+id/buttonUserAgreement"
            style="@style/textSettingActivity"
            android:text="@string/forward" />

        <ImageView
            style="@style/imageSettingActivity"
            android:contentDescription="@string/default_image"
            android:src="@drawable/forward" />

    </FrameLayout>

</LinearLayout>